<FrameLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Main_layout">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:id="@+id/imageView"
        android:background="@drawable/acceuil"
        android:layout_gravity="center"
        android:adjustViewBounds="false" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:gravity="center"
        android:id="@+id/Layout_navBar"
        android:paddingTop="@dimen/activity_horizontal_margin">


        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/butGeo"
            android:background="@drawable/geo" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/butLiens"
            android:background="@drawable/lien" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/butFiches"
            android:background="@drawable/fiches"
            android:adjustViewBounds="true" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/butUrgence"
            android:background="@drawable/urgence" />

        <ImageButton
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:id="@+id/butAutres"
            android:background="@drawable/autre" />

    </LinearLayout>

</FrameLayout>